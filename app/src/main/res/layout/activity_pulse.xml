<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pulso_icon2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        ></View>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".Temperature"
        android:layout_gravity="center_horizontal"

        >

        <!-- Círculo gris (más grande) en el fondo -->
        <View
            android:id="@+id/circle_grey"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/circle_grayblue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Círculo celeste (mediano) en el centro -->
        <View
            android:id="@+id/circle_lightblue"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circle_bluesky"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Círculo azul (más pequeño) en el centro -->
        <View
            android:id="@+id/circle_blue"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/circle_blue"
            app:layout_constraintBottom_toBottomOf="@id/circle_blue"
            app:layout_constraintStart_toStartOf="@id/circle_blue"
            app:layout_constraintEnd_toEndOf="@id/circle_blue"
            >
            <TextView
                android:id="@+id/currentTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textSize="60sp"
                android:layout_gravity="center"

                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/currentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#C8C8C8"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        >
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Vista con fondo -->
            <View
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/button_secondary"
                >

            </View>

            <!-- Texto encima de la vista -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pulso_icon"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="10sp"
                >

            </View>
            <TextView
                android:id="@+id/temperature1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="81 bpm"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10sp"

                >

            </TextView>

        </FrameLayout>

        <TextView
            android:id="@+id/temperatureHour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8:00 am - 12:00 am"
            android:layout_marginLeft="50sp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        >
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Vista con fondo -->
            <View
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/button_primary"
                >

            </View>

            <!-- Texto encima de la vista -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pulso_icon"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="10sp"
                >

            </View>
            <TextView
                android:id="@+id/temperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="82 bpm"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10sp"

                >

            </TextView>

        </FrameLayout>

        <TextView
            android:id="@+id/temperatureHour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8:00 am - 12:00 am"
            android:layout_marginLeft="50sp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        >
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Vista con fondo -->
            <View
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/button_secondary"
                >

            </View>

            <!-- Texto encima de la vista -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pulso_icon"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="10sp"
                >

            </View>
            <TextView
                android:id="@+id/temperature3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110 bpm"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10sp"

                >

            </TextView>

        </FrameLayout>

        <TextView
            android:id="@+id/temperatureHour3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="8:00 am - 12:00 am"
            android:layout_marginLeft="50sp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
